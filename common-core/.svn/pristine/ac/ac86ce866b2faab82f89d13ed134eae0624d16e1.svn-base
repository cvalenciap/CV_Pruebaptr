<!DOCTYPE html>
<html layout:decorator="layout/main">
<head>
<title th:text="${#messages.msg('punto.distribucion.title')}"></title>

<script th:inline="javascript">
/*<![CDATA[*/    

    var mensajeTipo = /*[[${mensajeTipo}]]*/ 'ninguno';
    var linkActionEdit = /*[[@{/puntoDistribucionGet}]]*/ 'ninguno';
   
/*]]>*/
</script>



</head>
<body>

	<div layout:fragment="content">
	
	<span id="urlRedirect" th:text="@{/}" style="display: none;"></span>
			
		<h3 class="text-center" th:text="#{login.change.password.title}"></h3>
		
		

		<div class="container col-sm-offset-2 col-sm-8">
			<div class="panel panel-default" style="background-color: transparent;">
				
				
				<div class="panel-body" style="background-color: #d9edf7;">
					<form name="form-cambiar-clave" id="form-cambiar-clave" 
					                                th:action="@{/cambioClaveActualizar}" 	
					                                method="post" 
					                                class="form-horizontal"
					                                role="form" >

						<fieldset>
							<div id="divErrorMessage" class="form-group">
								
							</div>
							<br/>
							<div class="form-group">
								<label class="control-label col-md-4" > 
									<span th:utext="#{login.current.password}" />
								</label>
								<div class="col-md-7">
									<input type="password" placeholder="Clave actual" id="currentpassword"
										name="currentpassword" class="form-control" maxlength="200" 
										data-toggle="tooltip" data-placement="below" autofocus="true" 
										style="background-color: rgba(255, 255, 255, 0.1);"/>	
								</div>
								<div class="col-xs-5 messageContainer"></div>
							</div>
							<div class="form-group">
								<label class="control-label col-md-4" > 
									<span th:utext="#{login.new.password}" />
								</label>
								<div class="col-md-7">
									<input type="password" placeholder="Nueva clave" id="newpassword"
										name="newpassword" class="form-control" maxlength="200"
										data-toggle="tooltip" data-placement="below" 
										style="background-color: rgba(255, 255, 255, 0.1);"/>
								</div>
								<div class="col-xs-5 messageContainer"></div>
							</div>
							<div class="form-group">
								<label class="control-label col-md-4" for="username"> 
									<span th:utext="#{login.confirm.new.password}" />
								</label>
								<div class="col-md-7">
									<input type="password" placeholder="Confirmar nueva clave" id="confirmnewpassword"
										name="confirmnewpassword" class="form-control" maxlength="200"
										data-toggle="tooltip" data-placement="below" 
										style="background-color: rgba(255, 255, 255, 0.1);"/>
								</div>
							</div>
						
							<div class="form-group">
								<div class="wrapper text-center">
									<div class="btn-group">
										<button type="submit" id="actualizarClave" class="btn btn-success btn-excel-punto" >
											<span th:utext="#{login.change}" class="glyphicon glyphicon-ok"/>
										</button>	
									</div>
									<div class="btn-group">
										<a th:href="@{/}" class="btn btn-primary">
											<i class="glyphicon glyphicon-hand-left"/>
											<span th:utext="#{login.start}"/>
										</a>
									</div>
								</div>
								<script type="text/javascript" th:src="@{/js/cambioClave.js}"></script>
							</div>
							
							
							
						</fieldset>
					</form>
					
				</div>
			</div>
		</div>
		
		<!-- un /div ANtes del /body -->
		<script type="text/javascript">
			</script>
	</div>

</body>
</html>
