<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:th="http://www.thymeleaf.org" lang="en">
<head>
</head>
<body>
	<div th:fragment="resultsListDetalle" class="grid_10 height800" id="idPhmetroDigitalDetalleTable">
		
		<table  class="fancyTable" id="myTablePhmetroDigitalDetalle" cellpadding="0" cellspacing="0" style="width: 100%">
			<thead>
				<tr>
					<th th:text="${#messages.msg('phmetroDigitalDetalle.table.col0')}" style="width: 30px;"></th>	
					<th th:text="${#messages.msg('phmetroDigitalDetalle.table.col1')}" style="width: 50px;"></th>
					<th th:text="${#messages.msg('phmetroDigitalDetalle.table.col2')}" style="width: 50px;"></th>
					<th th:text="${#messages.msg('phmetroDigitalDetalle.table.col3')}" style="width: 50px;"></th>
					<th th:text="${#messages.msg('phmetroDigitalDetalle.table.col4')}" style="width: 30px;"></th>
					<th th:text="${#messages.msg('phmetroDigitalDetalle.table.col5')}" style="width: 30px;"></th>		
					<th th:text="${#messages.msg('phmetroDigitalDetalle.table.col6')}" style="width: 30px;"></th>		
					<th th:text="${#messages.msg('phmetroDigitalDetalle.table.col7')}" style="width: 30px;"></th>		
					<th th:text="${#messages.msg('phmetroDigitalDetalle.table.col8')}" style="width: 30px;"></th>		
					<th th:text="${#messages.msg('phmetroDigitalDetalle.table.col9')}" style="width: 30px;"></th>		
					<th th:text="${#messages.msg('phmetroDigitalDetalle.table.col10')}" style="width: 30px;"></th>		
					<th th:text="${#messages.msg('phmetroDigitalDetalle.table.col11')}" style="width: 30px;"></th>			
										
				</tr>
			</thead>

		</table>
		
		<script type="text/javascript">
			$( document ).ready(function() {
				$('#myTablePhmetroDigitalDetalle').DataTable({
					"bProcessing": true,
					"serverSide": true,
					"searching": false,
					"lengthChange":   false,
					
          			"bJQueryUI": true,
					"ajax":{
						url :"phmetroDigitalDetalle/pagination", // json datasource
			            type: "post",  // type of method  ,GET/POST/DELETE
			            error: function(){
			              $("#myTablePhmetroDigitalDetalle_processing").css("display","none");
			            },
			            "data": function ( d ) {

			            	d.codigo = $('#idCodigoPHmetro').val();
			            }
					},
					"order": [ 6, 'desc' ],
					"columnDefs": [ 
						{ targets: '_all', visible: true,  },
						{"width": "30px",
			        		className: "dt-body-center",
			                "targets": 0                 
			            },
			            {"width": "50px",
			        		className: "dt-body-center",
			                "targets": [1, 2,10,11]                
			            },
			            {"width": "20px",
		        		  	className: "dt-body-center",
		                  	"targets": [3,4, 5, 6, 7, 8, 9] 
		              	},
		              	{"width": "95px",
		              		className: "dt-body-center",
		              		"orderable": false,
		              		"targets": 0,
		              		visible: true,
		              		"data": 1,
		              		"render": function ( data, type, row) {
		              			return ''+
		              			 		'<button class="btn btn-danger btn-delete-punto" title="Eliminar" onclick="inactivarPhmetroDigitalDetalle('+row[12]+')"><span class="glyphicon glyphicon-erase"></span></button>';
		              		}
		              	}
					]
				});
			}); 
		</script>	
	</div>
</body>
</html>